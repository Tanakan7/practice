{
  "name": "first",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "author": "knj",
  "scripts": {
    "build:html": "bin/build_html.sh",
    "build:data": "bin/build_data.sh",
    "build:css" : "bin/build_css.sh",
    "build:img" : "bin/build_img.sh",
    "build:js"  : "bin/build_js.sh",
    "build"     : "npm-run-all -s build:*",
    "watch:html"  : "chokidar **/*.ejs         -c 'npm run build:html'",
    "watch:data"  : "chokidar src/ejs/data/**/ -c 'npm run build:data buildByWatch'",
    "watch:css"   : "chokidar src/scss/*       -c 'npm run build:css'",
    "watch:img"   : "chokidar src/img/*        -c 'npm run build:img'",
    "watch:js"    : "chokidar src/js/*         -c 'npm run build:js'",
    "watch:server": "browser-sync start -s 'dist/' -f dist/* --port 8080",
    "clean": "rimraf dist/*",
    "start": "npm run clean && npm run build ; npm-run-all -p watch:*"
  },
  "devDependencies": {
    "autoprefixer": "^9.4.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.26.3",
    "chokidar-cli": "^1.2.1",
    "cpx": "^1.5.0",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.7",
    "ejs-cli": "^2.0.1",
    "eslint": "^5.10.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "js-beautify": "^1.8.9",
    "minimatch": "^3.0.4",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.0.1",
    "postcss-discard-comments": "^4.0.1",
    "postcss-import": "^12.0.1",
    "postcss-nesting": "^7.0.0",
    "postcss-scss": "^2.0.0",
    "postcss-simple-vars": "^5.0.1",
    "rimraf": "^2.6.2",
    "stylelint": "^9.9.0",
    "stylelint-config-standard": "^18.2.0",
    "uglifyjs": "^2.4.11",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {}
}
